{
  "name": "vikunja-mcp",
  "version": "1.0.0",
  "description": "Vikunja task management MCP server with CRUD, labels, reminders, and pagination",
  "author": {
    "name": "Samuel Rodda",
    "email": "samuel@arcforge.au"
  },
  "homepage": "https://github.com/IAMSamuelRodda/vikunja-mcp",
  "repository": "https://github.com/IAMSamuelRodda/vikunja-mcp",
  "license": "MIT",
  "keywords": ["vikunja", "tasks", "mcp", "productivity", "gtd", "self-hosted"],
  "mcpServers": {
    "vikunja": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/IAMSamuelRodda/vikunja-mcp", "vikunja-mcp"],
      "env": {
        "VIKUNJA_URL": "${VIKUNJA_URL}",
        "VIKUNJA_TOKEN": "${VIKUNJA_TOKEN}"
      }
    }
  }
}
